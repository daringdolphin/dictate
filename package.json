{
  "name": "voiceclip",
  "version": "1.0.0",
  "description": "A minimal Windows desktop app for push-to-talk voice-to-text transcription",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "npm run build-main && npm run build-renderer",
    "build-main": "webpack --config webpack.main.config.js",
    "build-renderer": "webpack --config webpack.renderer.config.js",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "dist": "npm run build && electron-builder",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:zip": "npm run build && electron-builder --win zip",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests --testPathIgnorePatterns=tests/e2e",
    "test:e2e": "npm run build && playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist build"
  },
  "keywords": [
    "electron",
    "voice",
    "transcription",
    "whisper",
    "speech-to-text"
  ],
  "author": "VoiceClip Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "css-loader": "^6.8.1",
    "electron": "^36.4.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.55.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.1",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "formdata-node": "^6.0.3",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "robotjs": "^0.6.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "electron"
    ],
    "onlyBuiltDependencies": [
      "electron"
    ]
  }
}